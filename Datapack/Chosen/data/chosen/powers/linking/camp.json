            "type": "origins:change_resource",
            "resource": "chosen:linking/camp_using",
            "change": 0,
            "operation": "set"
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:raycast",
                    "block": true,
                    "entity": true,
                    "shape_type": "collider",
                    "fluid_handling": "none",
                    "block_action": {
                        "type": "origins:execute_command",
                        "command": "particle minecraft:trial_spawner_detection ~ ~1 ~ 0.2 0.2 0.2 0 1"
                    },
                    "command_step": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "chosen:linking/camp_using",
                    "change": 1
                }
            ]
        },
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "chosen:linking/camp_using",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:moving",
                    "inverted": true,
                    "horizontally": true,
                    "vertically": false
                },
                {
                    "type": "origins:raycast",
                    "block_condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:or",
                                "conditions": [
                                    {
                                        "type": "origins:block",
                                        "block": "minecraft:soul_campfire"
                                    },
                                    {
                                        "type": "origins:block",
                                        "block": "minecraft:campfire"
                                    }
                                ]
                            },
                            {
                                "type": "origins:block_state",
                                "property": "lit",
                                "value": true
                            }
                        ]
                    },
                    "block": true,
                    "entity": true,
                    "shape_type": "collider",
                    "fluid_handling": "none"
                }
            ]
        }
    },
    "pose": {
        "type": "origins:pose",
        "arm_pose": "toot_horn",
        "condition": {
            "type": "origins:resource",
            "resource": "chosen:linking/camp_using",
            "comparison": ">",
            "compare_to": 0
        }
    },
